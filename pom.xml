        <version.jboss.logmanager>1.4.1.Final</version.jboss.logmanager>
        <version.jboss.osgi.framework>3.0.3.Final</version.jboss.osgi.framework>
        <version.jboss.osgi.metadata>3.0.1.Final</version.jboss.osgi.metadata>
