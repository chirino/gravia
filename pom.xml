        <version.mockito>1.8.4</version.mockito>
        <version.ops4j.pax.web>3.0.2</version.ops4j.pax.web>
        <version.osgi>5.0.0</version.osgi>
        <version.slf4j>1.5.11</version.slf4j>
        
		<surefire.system.args>-ea</surefire.system.args>
