            </dependency>
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.core</artifactId>
                <version>${version.osgi}</version>
            </dependency>
	        <dependency>
	            <groupId>org.osgi</groupId>
	            <artifactId>org.osgi.enterprise</artifactId>
                <version>${version.osgi}</version>
	        </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-jdk14</artifactId>
